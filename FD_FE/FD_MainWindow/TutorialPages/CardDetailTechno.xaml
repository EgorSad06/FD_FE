<Page x:Class="FD_MainWindow.TutorialPages.CardDetailTechno"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FD_MainWindow.TutorialPages"
      mc:Ignorable="d"
      Title="CardDetailTechno">

    <Viewbox Stretch="Uniform">
        <Grid Width="1600" Height="900" Background="Tan">
            <!-- Назад -->
            <Button Content="Назад"
                    Click="BackButton_Click"
                    FontSize="40"
                    Width="200" Height="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,65,40"/>

            <!-- Урон -->
            <Label Content="Активное значение,&#xD;&#xA;он же урон"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="40,34,0,0"
                   Width="410" Height="100"/>

            <!-- Основное описание -->
            <Label Content="Класс карточки - обводка вокруг АЗ,&#xD;&#xA;от него зависит АЗ :&#xA;#гс - количество союзников этого&#xA; же класса вокруг карты&#xA;#цс - количество союзников этого&#xA; же класса в данной цепи&#xA;#пк - количество пустых клеток&#xA; вокруг карты&#xA;#сз - статическое значение"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="23,294,0,0"
                   Width="654" Height="452"/>

            <!-- Основная карта -->
            <Image Source="/ClassLib;component/Assets/Sprites/CardsForTutor/TurtorCardTechno.png"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Margin="0,10,0,0"
                   Width="612" Height="820"/>

            <!-- ОЗ -->
            <Label Content="ОЗ - очки здоровья"
                   FontSize="25"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,34,50,0"
                   Width="400" Height="100"/>

            <!-- Фреймы -->
            <Image Margin="1128,223,365,551"
                   Source="/ClassLib;component/Assets/Sprites/CardTemplates/c_frame.png"
                   Stretch="Fill"/>

            <Image Margin="1106,385,360,389"
                   Source="/ClassLib;component/Assets/Sprites/CardTemplates/e_frame.png"
                   Stretch="Fill"/>

            <Image Margin="1128,543,365,231"
                   Source="/ClassLib;component/Assets/Sprites/CardTemplates/g_frame.png"
                   Stretch="Fill"/>

            <!-- Подписи к фреймам -->
            <Label Content="&#xA;#цс - количество союзников&#xD;&#xA; этого же класса &#xD;&#xA;в данной цепи&#xA;"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="1237,380,0,0"
                   Width="359" Height="108"/>

            <Label Content="&#xA;#цс - количество союзников&#xA; этого же класса &#xA;в данной цепи&#xA;"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="1237,561,0,0"
                   Width="359" Height="108"/>

            <Label Content="&#xA;#цс - количество союзников&#xA; этого же класса &#xA;в данной цепи&#xA;"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="1231,217,0,0"
                   Width="359" Height="108"/>
        </Grid>
    </Viewbox>
</Page>