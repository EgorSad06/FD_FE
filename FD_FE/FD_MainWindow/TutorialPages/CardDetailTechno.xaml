<Page x:Class="FD_MainWindow.TutorialPages.CardDetailTechno"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow.TutorialPages"
      mc:Ignorable="d" 
      Background="Tan" d:DesignWidth="1600" d:DesignHeight="900"
      Title="CardDetailFolk">

    <Grid Background="Tan">
        <Button Content="Назад" 
        Command="{Binding BackCommand}"
        Click="BackButton_Click" 
        FontSize="40" Margin="1223,751,65,40" RenderTransformOrigin="2.215,4.31"/>

        <Label Content="Активное значение,&#xD;&#xA;он же урон" FontSize="25" HorizontalAlignment="Left" Height="199" Margin="40,34,0,0" VerticalAlignment="Top" Width="410" RenderTransformOrigin="0.59,-0.779"/>

        <Label Content="Класс карточки - обводка вокруг АЗ,&#xD;&#xA;от него зависит АЗ :&#xA;#гс - количество союзников этого&#xA; же класса вокруг карты&#xA;#цс - количество союзников этого&#xA; же класса в данной цепи&#xA;#пк - количество пустых клеток&#xA; вокруг карты&#xA;#сз - статическое значение" FontSize="25" HorizontalAlignment="Left" Height="452" Margin="23,294,0,0" VerticalAlignment="Top" Width="654" RenderTransformOrigin="0.59,-0.779">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.647"/>
                    <RotateTransform/>
                    <TranslateTransform Y="2.819"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Image
                                   Stretch="UniformToFill"
                                   Source="/ClassLib;component/Assets/Sprites/CardsForTutor/TurtorCardTechno.png" Margin="494,10,494,30"/>
        <Label Content="ОЗ - очки здоровья" FontSize="25" HorizontalAlignment="Left" Height="235" Margin="1128,34,0,0" VerticalAlignment="Top" Width="563" RenderTransformOrigin="0.59,-0.779"/>
        <Image Margin="1128,223,365,551" Source="/ClassLib;component/Assets/Sprites/CardTemplates/c_frame.png" Stretch="Fill"/>
        <Image Margin="1106,385,360,389" Source="/ClassLib;component/Assets/Sprites/CardTemplates/e_frame.png" Stretch="Fill" RenderTransformOrigin="-0.176,-0.213"/>
        <Image Margin="1128,543,365,231" Source="/ClassLib;component/Assets/Sprites/CardTemplates/g_frame.png" Stretch="Fill"/>
        <Label Content="&#xA;#цс - количество союзников&#xD;&#xA; этого же класса &#xD;&#xA;в данной цепи&#xA;" FontSize="25" HorizontalAlignment="Left" Height="108" Margin="1237,380,0,0" VerticalAlignment="Top" Width="359" RenderTransformOrigin="0.59,-0.779">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="0.647"/>
                    <RotateTransform/>
                    <TranslateTransform Y="2.819"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
    </Grid>
</Page>
