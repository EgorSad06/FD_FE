<Page x:Class="FD_MainWindow.TutorialPages.CardDetailFolk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FD_MainWindow.TutorialPages"
      mc:Ignorable="d"
      Title="CardDetailFolk">

    <Viewbox Stretch="Uniform">
        <Grid Width="1600" Height="900" Background="Tan">
            <Image Source="/ClassLib;component/Assets/Sprites/Menu/BGtuto.jpg" Stretch="UniformToFill"/>
            <Button Content="Назад"
                    Click="BackButton_Click"
                    FontSize="40"
                    Width="200" Height="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,65,40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Label Content="Активное значение,&#xD;&#xA;он же урон"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="169,52,0,0"/>

            <Label Content="Класс карточки, от него&#xA;зависит АЗ :&#xA;#гс - количество союзников этого&#xD;&#xA; же класса вокруг карты&#xA;#цс - количество союзников этого&#xD;&#xA; же класса в данной цепи&#xA;#пк - количество пустых клеток&#xD;&#xA; вокруг карты&#xA;#сз - статическое значение"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="104,480,0,0"
                   Width="417" Height="452"/>

            <Image Source="/ClassLib;component/Assets/Sprites/CardsForTutor/TurtorCardFolk.png"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="612" Height="820"/>

            <Label Content="ОЗ - очки здоровья"
                   FontSize="25"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,52,112,0"
                   Width="400"/>
        </Grid>
    </Viewbox>
</Page>