<Page x:Class="FD_MainWindow.TutorialPages.CardDetailFolk"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FD_MainWindow.TutorialPages"
      mc:Ignorable="d"
      Title="CardDetailFolk">

    <Viewbox Stretch="Uniform">
        <Grid Width="1600" Height="900" Background="Tan">
            <Image Source="/ClassLib;component/Assets/Sprites/Menu/BGtuto.jpg" Stretch="UniformToFill"/>
            <Button Content="Назад"
                    Click="BackButton_Click"
                    FontSize="40"
                    Width="200" Height="60"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Margin="0,0,65,40">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Label Content="Активное значение,&#xD;&#xA;он же урон"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="169,52,0,0"/>

            <Label Content="Класс карточки - Сокращение в левом&#xD;&#xA;нижнем углу, это&#xD;&#xA;класс карточки, от класса зависит&#xD;&#xA;АЗ и при каких условиях он &#xD;&#xA;действует"
                   FontSize="25"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Margin="31,480,0,0"
                   Width="490" Height="452"/>

            <Image Source="/ClassLib;component/Assets/Sprites/CardsForTutor/TurtorCardFolk.png"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="612" Height="820"/>

            <Label Content="ОЗ - очки здоровья"
                   FontSize="25"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="0,52,112,0"
                   Width="400"/>
            <Label Content="ПК - группа союзников&#xA;АЗ зависит &#xA;от количества&#xA; пустых клеток вокруг карты"
                FontSize="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="1182,382,0,0"
                Width="359" Height="140"/>
            <Label Content="ГС группа союзников&#xA; -  АЗ зависит  &#xA;от количество &#xA;союзников этого же &#xA;класса вокруг карты"
                FontSize="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="1182,545,0,0"
                Width="359" Height="203"/>
            <Label Content="ЦС -цепь союзников&#xA;АЗ зависит от &#xA;количества карт в цепи"
                FontSize="25"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="1176,219,0,0"
                Width="359" Height="108"/>
        </Grid>
    </Viewbox>
</Page>