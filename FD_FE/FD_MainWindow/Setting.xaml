<Page x:Class="FD_MainWindow.Setting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Setting"
      Background="DarkBlue">

    <Grid  Background="Tan">
        <StackPanel Margin="0,23,0,-23">
            <!-- Настройка разрешения -->
           

            <!-- Режим окна -->
            <GroupBox Header="Режим отображения" Margin="0 0 0 10" Width="682">
                <StackPanel>
                    <RadioButton x:Name="WindowedRadioButton" 
                   Content="Оконный режим" 
                   IsChecked="True"/>
                    <RadioButton x:Name="FullScreenRadioButton" 
                   Content="Полный экран"/>
                </StackPanel>
            </GroupBox>

            <!-- Настройки яркости -->
            <GroupBox Header="Яркость экрана" Margin="0 0 0 10" Width="681">
                <Slider Value="{Binding Brightness}" 
                      Minimum="0" Maximum="100"
                      TickFrequency="10"
                      IsSnapToTickEnabled="True" Margin="0,0,-2,0"/>
            </GroupBox>

            <!-- Настройки звука -->
            <GroupBox Header="Настройки звука" RenderTransformOrigin="0.5,0.5" Width="686">
                <GroupBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleY="0"/>
                        <RotateTransform/>
                        <TranslateTransform Y="0"/>
                    </TransformGroup>
                </GroupBox.RenderTransform>
                <StackPanel>
                    <Label Content="Общая громкость:"/>
                    <Slider Value="{Binding MasterVolume}" 
                          Minimum="0" Maximum="100" Width="672"/>

                    <Label Content="Громкость эффектов:"/>
                    <Slider Value="{Binding EffectsVolume}" 
                          Minimum="0" Maximum="100" Width="672"/>
                </StackPanel>
            </GroupBox>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20">
                <Button Content="Применить"
                      Background="LawnGreen"
                      Command="{Binding ApplyCommand}"
                      Width="120" Margin="0 0 10 0"
                        Click="ApplyButton_Click"/>

                <Button Content="Сбросить"
                        Background="OrangeRed"
                      Command="{Binding ResetCommand}"
                      Width="120" Margin="0 0 10 0"
                        Click="ResetButton_Click"/>

                <Button Content="Назад" 
                      Command="{Binding BackCommand}"
                      Width="120"
                       Click="BackButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
