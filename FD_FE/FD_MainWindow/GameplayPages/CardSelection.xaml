<Page x:Class="FD_MainWindow.CardSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CardSelection">
    <Page.Resources>
        <ResourceDictionary Source="/GameplayPages/Dictionary1.xaml"/>
    </Page.Resources>
    
    <Grid x:Name="CardSelectionGrid" Background="Maroon">
        <StackPanel Orientation="Vertical" Width="100" Height="160">
            <StackPanel.Background>
                <ImageBrush ImageSource="/ClassLib;component/Assets/Sprites/CardBasics/general_template.png" Stretch="UniformToFill"/>
            </StackPanel.Background>
            <StackPanel Width="92" HorizontalAlignment="Center" Height="29" Margin="0,6,0,0" Orientation="Horizontal">
                <TextBlock Text="1" Foreground="Cyan"/>
                <StackPanel Width="44">
                        
                </StackPanel>
                <TextBlock Text="2" Style="{StaticResource CardValueT}"  Foreground="WhiteSmoke"/>
            </StackPanel>
            <Image Source="/ClassLib;component/Assets/Sprites/Cards/railgun.png" Height="90" Width="90" Stretch="UniformToFill" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <TextBlock Text="Рельсотрон" Style="{StaticResource CardNameT}"/>
        </StackPanel>
        
    </Grid>
</Page>
