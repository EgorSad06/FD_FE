<Page x:Class="FD_MainWindow.TutorialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      Title="Обучение"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="450"
      d:DesignWidth="800"
      >

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
    </Page.Resources>

    <Grid x:Name="TutorialGrid" >


        <!-- Левая часть с текстом -->
        <StackPanel Grid.Column="0" Margin="40" VerticalAlignment="Center">
            <TextBlock Text="{Binding CurrentCard.name}" 
                     FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="{Binding CurrentCard.description}" 
                     FontSize="18" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Правая часть с изображением -->
        <Image Margin="344,24,344,105" Stretch="Uniform"
               Source="{Binding CurrentCardImage}"/>

        <!-- Панель управления -->
        <StackPanel Grid.ColumnSpan="2" VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center" Orientation="Horizontal" Margin="40">
            <Button Content="Назад"  Command="{Binding PreviousCommand}" 
                    Width="100" Margin="0,0,20,0" FontSize="20" 
                    Visibility="{Binding ShowBackButton, Converter={StaticResource BoolToVisibility}}"/>

            <Button Content="Далее" Command="{Binding NextCommand}" 
                    Width="100" Margin="0,0,20,0" FontSize="20" 
                    Visibility="{Binding ShowNextButton, Converter={StaticResource BoolToVisibility}}"/>

            <Button Content="В меню" Command="{Binding ReturnCommand}" 
                    Width="120" FontSize="20" />
        </StackPanel>
    </Grid>
</Page>