<Page x:Class="FD_MainWindow.TutorialPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Tutorial"
      Background="BlanchedAlmond">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <Style x:Key="NoSelectionStyle" TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>
    </Page.Resources>

    <Grid>
        <!-- Основной контейнер с горизонтальным расположением карточек -->
        <ListBox ItemsSource="{Binding Cards}" 
                 SelectedItem="{Binding CurrentCard}"
                 Background="Transparent" 
                 BorderThickness="0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 ItemContainerStyle="{StaticResource NoSelectionStyle}">

            <!-- Горизонтальное расположение карточек -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <!-- Видимость карточки управляется свойством IsSelected -->
                    <Border Width="400" 
                            Height="300" 
                            Background="White" 
                            Padding="20"
                            Margin="20"
                            CornerRadius="10"
                            Visibility="{Binding IsSelected, Converter={StaticResource BoolToVisibility}}">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" 
                                     FontSize="24" 
                                     FontWeight="Bold"
                                     Foreground="Black"/>
                            <Image Source="{Binding Image}" 
                                   Height="150" 
                                   Margin="0,10"
                                   Stretch="Uniform"/>
                            <TextBlock Text="{Binding Description}" 
                                       TextWrapping="Wrap"
                                       FontSize="14"
                                       Foreground="Black"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <!-- Панель управления внизу -->
        <StackPanel VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center" 
                    Orientation="Horizontal"
                    Margin="0,0,0,50">

            <Button Content="← Назад" 
                    Command="{Binding PreviousCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Visibility="{Binding ShowBackButton, Converter={StaticResource BoolToVisibility}}"/>

            <Button Content="Далее →" 
                    Command="{Binding NextCommand}"
                    Width="100"
                    Height="35"
                    FontSize="14"
                    Margin="20,0"
                    Visibility="{Binding ShowNextButton, Converter={StaticResource BoolToVisibility}}"/>

            <Button Content="В меню" 
                    Command="{Binding ReturnCommand}"
                    Width="150"
                    Height="35"
                    FontSize="14"
                    Visibility="{Binding ShowReturnButton, Converter={StaticResource BoolToVisibility}}"/>
        </StackPanel>
    </Grid>
</Page>