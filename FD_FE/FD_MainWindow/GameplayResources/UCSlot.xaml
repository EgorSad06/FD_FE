<UserControl x:Class="FD_MainWindow.UCSlot"
             x:Name="UCslot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FD_MainWindow"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="/GameplayResources/CardStyles.xaml"/>
    </UserControl.Resources>
    <Viewbox x:Name="slotVB" Width="100" Height="160" Stretch="UniformToFill">
        <Button Width="100" Height="160" Grid.ColumnSpan="3" Grid.RowSpan="3" Click="Button_Click" Background="Transparent" Style="{StaticResource CardButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Viewbox>
</UserControl>
