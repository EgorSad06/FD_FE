<Page x:Class="FD_MainWindow.GameplayPages.StartGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow.GameplayPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartGame">

    <Grid Background="Maroon">
        <TextBlock TextBlock.TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center"><Run Text="StartGame"/><LineBreak/><Run Text="Страница запуска игры (режим игры, подключение и т.п.)"/></TextBlock>
        <RadioButton x:Name="RB_server" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Content="Создать сервер"/>
        <RadioButton Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,45" Content="Подключиться"/>
        <TextBox x:Name="TB_IP" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="115,0,0,45"/>
        <Button  Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="115,0,0,10" Content="Готово" Click="Button_Click"/>
        <Button Width="100" Height="50" Click="StartButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" >Start</Button>
    </Grid>
</Page>
