<Page x:Class="FD_MainWindow.GameplayPages.StartGame"
      x:Name="Start_game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow.GameplayPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartGame">

    <Grid Background="Maroon">
        <TextBlock TextBlock.TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" Margin="0,222,0,0"><Run Text="StartGame"/><LineBreak/><Run Text="Страница запуска игры (режим игры, подключение и т.п.)"/></TextBlock>

        <TextBox x:Name="Message" Width="300" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,259,0,0" />
        <Button x:Name="B_send" Content="Отправить" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="200,314,0,0" IsEnabled="False" Click="Send_Click"/>
        <Button x:Name="B_receive" Content="Получить" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="-200,314,0,0" IsEnabled="False" Click="Receive_Click"/>
        
        <RadioButton x:Name="RB_server" Foreground="White" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Content="Создать сервер"/>
        <RadioButton  Foreground="White" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,45" Content="Подключиться"/>
        <TextBox x:Name="TB_IP" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="115,0,0,45"/>
        <Button x:Name="B_connect" Width="100" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="115,0,0,10" Content="Подключиться" Click="Connect_Click"/>
        
        <Button Width="100" Height="50" Click="StartButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,10" >Start</Button>
    </Grid>
</Page>
