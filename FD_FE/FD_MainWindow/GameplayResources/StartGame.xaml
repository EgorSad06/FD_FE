<Page x:Class="FD_MainWindow.GameplayPages.StartGame"
      x:Name="Start_game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow.GameplayPages"
      mc:Ignorable="d" 
      d:DesignWidth="1600" d:DesignHeight="900"
      Title="StartGame">

    <Page.Resources>
        <ResourceDictionary Source="/GameplayResources/CardStyles.xaml"/>

    </Page.Resources>
    <Grid Background="Maroon">
        <Image Source="/ClassLib;component/Assets/Sprites/Menu/backgroundstar.png" Stretch="UniformToFill"/>

        <StackPanel x:Name="SP_modes" Orientation="Horizontal" Width="837" Height="788" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="333,0,0,0">
            <Button Tag="t" Width="432" Height="500" Style="{StaticResource CardButton}" Click="Mode_Click">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/ClassLib;component/Assets/Sprites/CardTemplates/t_template.png"/>
                </Button.Background>
            </Button>
            <Button Tag="f" Width="360" Height="549" Style="{StaticResource CardButton}" Click="Mode_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/ClassLib;component/Assets/Sprites/CardTemplates/f_template.png"  Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <!--Grid Width="320" Height="100" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10">
        <Grid Width="320" Height="100" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,147,0,0" Grid.Row="1">
            <TextBox x:Name="Message" Width="320" Height="50" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="B_send" Content="Отправить" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Bottom" IsEnabled="False" Click="Send_Click"/>
            <Button x:Name="B_receive" Content="Получить" Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsEnabled="False" Click="Receive_Click"/>
        </Grid-->

        <Grid Width="345" Height="175" Margin="0,0,31,341" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <RadioButton  Foreground="White" Width="144" Height="49" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="35" Content="Клиент"/>
            <RadioButton x:Name="RB_server" Foreground="White" Width="162" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="35" Content="Сервер"/>
            <TextBox x:Name="TB_IP" Width="156" Height="49" VerticalAlignment="Top" HorizontalAlignment="Right"/>
            <Button x:Name="B_connect" Width="156" Height="45" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Content="Подключиться" Click="Connect_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Button x:Name="B_start" Content="Начать" FontSize="35" Width="170" Height="79"
        VerticalAlignment="Bottom" HorizontalAlignment="Right"
        Margin="0,0,31,25" IsEnabled="False">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button Content="Выход" FontSize="35" Width="170" Height="79" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Exit_Click" Margin="10,791,0,0">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="10">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</Page>
