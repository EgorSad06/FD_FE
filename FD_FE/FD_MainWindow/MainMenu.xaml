                    </Setter.Value>
                </Setter>

                <!-- Триггеры -->
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="FontWeight" Value="Bold"/>
                        <!-- Явно отключаем любые изменения границы -->
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
            </Button.Style>
        </Button>
