                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <!-- Спрятанная рамка для других окн -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        
    </Grid>
</Page>
