<Page x:Class="FD_MainWindow.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FD_MainWindow"
      Loaded="Page_Loaded"
      Opacity="0"
      Title="MainMenu"
      Background="DarkBlue"
>



    <Page.Resources>
        <Storyboard x:Key="FadeInAnimation">
            <!-- Указываем анимацию для самой страницы -->
            <DoubleAnimation
                Storyboard.TargetProperty="Opacity"
                From="0" 
                To="1"
                Duration="0:0:0.5"
                />
        </Storyboard>
    </Page.Resources>

    <Grid Background="LightBlue">

        <!-- Картинка фона -->
        <Image Source="/ClassLib;component/Assets/Sprites/Menu/main_meny_bg.jpg" Stretch="UniformToFill"/>


        <!-- Кнопки -->
        <Button 
        Name="PlayButton" 
        Content="Играть" 
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        Height="119"
        Width="440"
        Margin="53,184,0,0"
        Click="PlayButtonSelection_Click"
        Background="Transparent"
        Foreground="White"
        FontSize="75"
        FontFamily="Segoe Print"
        BorderBrush="Transparent"
        BorderThickness="0">
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Базовые свойства -->
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <!-- Кастомный шаблон без состояний по умолчанию -->
                                <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Триггеры -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <!-- Явно отключаем любые изменения границы -->
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button 
            x:Name="EducationButton" 
            Content="Обучение" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="119"
            Width="440"
            Margin="53,308,0,0"
            Click="EducationButtonSelection_Click"
            Background="Transparent"
            Foreground="White"
            FontSize="75"
            FontFamily="Segoe Print"
            BorderBrush="Transparent"
           
            BorderThickness="0">
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Базовые свойства -->
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <!-- Кастомный шаблон без состояний по умолчанию -->
                                <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>

                    <!-- Триггеры -->
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="FontWeight" Value="Bold"/>
                            <!-- Явно отключаем любые изменения границы -->
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
        <Button 
            x:Name="StatisticsButton" 
            Content="Достижения" 
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="119"
            Width="539"
            Margin="10,427,0,0"
            Click="StatisticsButtonSelection_Click"
            Background="Transparent"
            Foreground="White"
            FontSize="75"
            FontFamily="Segoe Print"
            BorderBrush="Transparent"
            BorderThickness="0" RenderTransformOrigin="0.464,0.607">
            <Button.Style>
                <Style TargetType="Button">
                    <!-- Базовые свойства -->
                    <Setter Property="FontWeight" Value="Normal"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <!-- Кастомный шаблон без состояний по умолчанию -->
                                <Border x:Name="border" 
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
